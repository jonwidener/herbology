<div id="<%= dom_id herb %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Latin name:</strong>
    <%= herb.latin_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Common names:</strong>
    <%= herb.common_names %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= herb.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this herb", herb, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this herb', edit_herb_path(herb), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
