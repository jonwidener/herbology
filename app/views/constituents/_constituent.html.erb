<div id="<%= dom_id constituent %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= constituent.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= constituent.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this constituent", constituent, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this constituent', edit_constituent_path(constituent), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
